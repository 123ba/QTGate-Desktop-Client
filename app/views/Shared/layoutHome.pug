doctype html
html
	include header
	//-<style> ::-webkit-scrollbar { display: none; } </style>
	body#body( data-bind = "style: { overflow: overflowShow() ? 'auto' : 'hidden'} ")
		.mainScreen( style = "z-index: 1020;")
			.ui.left.vertical.fluid.tabular.menu.fixed( style="width:75px!important; margin: 10px!important; margin-top: 40px!important; ")
				
				a.item( data-bind = "css:{ active: MenuItems() [0]}, click: function(){ MenuItems([ true, false, false, false, false, false, false, false ]); overflowShow( true )}")
					img.ui.mini.image( src = "/images/256x256.png" style="width:25px!important;")
				a.item( data-bind = "css:{ active: MenuItems() [1]}, click: function(){ MenuItems([ false, true, false, false, false, false, false, false ]);overflowShow( false )}")
					.menuItem
						i.icon.privacy.large.green
				//-		IMAP account
				a.item( data-bind = "css:{ active: MenuItems() [2]}, click: function(){ MenuItems([ false, false, true, false, false, false, false, false ]);overflowShow( false )}, visible: imapInputFormActive()")
					.menuItem
						i.address.card.outline.icon.large.blue
				//-		QTGate connect & region area
				a.item( data-bind = "css:{ active: MenuItems() [3]}, click: function(){ MenuItems([ false, false, false, true, false, false, false, false ]);overflowShow( true )}, visible: QTGateConnectActive() || QTGateConnectRegionActive")
					.menuItem
						i.exchange.icon.large.purple
				//-		QTGate file storage
				a.item( data-bind = "css:{ active: MenuItems() [4]}, click: function(){ MenuItems([ false, false, false, false, true, false, false, false ]);overflowShow( false )}, visible: false")
					.menuItem
						i.cloud.upload.icon.large.violet
				//-		QTGate message
				a.item( data-bind = "css:{ active: MenuItems() [5]}, click: function(){ MenuItems([ false, false, false, false, false, true, false, false ]);overflowShow( false )}, visible: false")
					.menuItem
						i.talk.outline.icon.large.pink
				a.item( data-bind = "css:{ active: MenuItems() [6]}, click: function(){ MenuItems([ false, false, false, false, false, false, true, false ]);overflowShow( true )}")
					.menuItem
						i.map.outline.icon.large.yellow
				a.item( data-bind = "css:{ active: MenuItems() [7]}, visible: config().newVerReady,click: function(){ MenuItems([ false, false, false, false, false, false, false, true ]);overflowShow( false )}")
					.menuItem
						i.icon.setting.big.loading.red( style = "margin-left: -6px;")
					
		#languageArea
			.ui.text.shape.languageText( data-bind = " click: selectItem " )
				.sides
					span.ui.header.side.en.languageItem.languageTextCoverColor
						i.flag.united.kingdom.
						span.languageItemSpan( data-bind = " text: menu[ 'en' ][0].showName " )
					span.ui.header.side.tw.languageItem.languageTextCoverColor
						i.flag.taiwan
						span.languageItemSpan( data-bind = " text: menu[ 'tw' ][0].showName " )
					span.ui.header.side.zh.languageItem.languageTextCoverColor
						i.flag.china
						span.languageItemSpan( data-bind = " text: menu[ 'zh' ][0].showName " )
					span.ui.header.side.ja.languageItem.languageTextCoverColor
						i.flag.japan
						span.languageItemSpan( data-bind = " text: menu[ 'ja' ][0].showName " )
		block jumbotron
		.content(style="margin-left: 110px;margin-right: 25px;margin-top: 30px;")
			block jumbotron1
	block ScriptBlock
	<script>if ( typeof module === 'object') { window.module = module; module = undefined; }</script>
	script( src='/scripts/jquery.min.js', type="text/javascript" )
	script( src='/scripts/jquery.cookie.js', type="text/javascript" )
	script( src='/scripts/semantic.min.js', type="text/javascript" )
	script( src='/scripts/knockout.js', type="text/javascript" )
	script( src='/scripts/knockout.animate.js', type="text/javascript" )
	script( src='/scripts/socket.io.min.js', type="text/javascript" )
	script( src='/scripts/home.js', type="text/javascript" )
	<script>if ( window.module ) module = window.module;</script>